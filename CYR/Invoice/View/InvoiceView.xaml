<UserControl
  x:Class="CYR.Invoice.View.InvoiceView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:CYR.ViewModel"
  d:DataContext="{d:DesignInstance Type=vm:CreateInvoiceViewModel,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="850"
  d:DesignWidth="1500"
  mc:Ignorable="d">
  <Grid>
    <Grid Margin="20,10,20,0">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
      </Grid.RowDefinitions>
      <Grid Grid.Row="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel
          Grid.Row="0"
          Grid.Column="0"
          Orientation="Horizontal">
          <materialDesign:PackIcon
            Width="30"
            Height="30"
            VerticalAlignment="Center"
            Foreground="LightGray"
            Kind="FilePlus" />
          <Label
            VerticalAlignment="Center"
            Content="Neue Rechnung erstellen"
            FontSize="28" />
        </StackPanel>
        <StackPanel
          Grid.Row="0"
          Grid.Column="1"
          HorizontalAlignment="Right"
          Orientation="Horizontal">
          <Button Style="{StaticResource MaterialDesignFlatButton}">
            <Button.Content>
              <materialDesign:PackIcon
                Width="30"
                Height="30"
                VerticalAlignment="Center"
                Kind="Download" />
            </Button.Content>
          </Button>
          <Button Style="{StaticResource MaterialDesignFlatButton}">
            <Button.Content>
              <materialDesign:PackIcon
                Width="30"
                Height="30"
                VerticalAlignment="Center"
                Kind="Printer" />
            </Button.Content>
          </Button>
        </StackPanel>
        <Separator
          Grid.Row="1"
          Grid.Column="0"
          Grid.ColumnSpan="2"
          Margin="0,15,0,0" />
      </Grid>

      <!--  Second Row  -->
      <Grid Grid.Row="1" Margin="0,20,0,0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid
          Grid.Row="0"
          Grid.Column="0"
          Margin="0,0,50,0">
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
          <Label
            Grid.Row="0"
            Content="Absender"
            FontSize="20" />
          <ComboBox
            Grid.Row="1"
            Height="40"
            Margin="0,5,0,0"
            BorderBrush="LightGray"
            BorderThickness="1"
            Style="{StaticResource MaterialDesignOutlinedComboBox}" />
          <Label
            Grid.Row="2"
            Margin="0,10,0,0"
            Content="Empfänger"
            FontSize="20" />
          <ComboBox
            Grid.Row="3"
            Height="40"
            Margin="0,5,0,0"
            BorderBrush="LightGray"
            BorderThickness="1"
            Style="{StaticResource MaterialDesignOutlinedComboBox}" />
          <Label
            Grid.Row="4"
            Margin="0,10,0,0"
            Content="Betreff"
            FontSize="20" />
          <TextBox
            Grid.Row="5"
            Margin="0,5,0,0"
            BorderBrush="LightGray"
            BorderThickness="1"
            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1">
          <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
          <Label
            Grid.Row="0"
            Content="Invoice Details"
            FontSize="20" />
          <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,0,15,0">
              <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
              </Grid.RowDefinitions>
              <Label
                Grid.Row="0"
                Content="Rechnungsdatum"
                FontSize="16" />
              <DatePicker
                Grid.Row="1"
                Height="45"
                Margin="0,5,0,0"
                VerticalContentAlignment="Center"
                BorderBrush="LightGray"
                BorderThickness="1"
                Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
              <Label
                Grid.Row="2"
                Content="Rechnungsnummer"
                FontSize="16" />
              <TextBox
                Grid.Row="3"
                Margin="0,5,0,0"
                BorderBrush="LightGray"
                BorderThickness="1"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" />
            </Grid>
            <Grid Grid.Column="1" Margin="15,0,0,0">
              <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
              </Grid.RowDefinitions>
              <Label
                Grid.Row="0"
                Content="Zeitraum Von"
                FontSize="16" />
              <DatePicker
                Grid.Row="1"
                Height="45"
                Margin="0,5,0,0"
                VerticalContentAlignment="Center"
                BorderBrush="LightGray"
                BorderThickness="1"
                Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
              <Label
                Grid.Row="2"
                Content="Zeitraum Bis"
                FontSize="16" />
              <DatePicker
                Grid.Row="3"
                Height="45"
                Margin="0,5,0,0"
                VerticalContentAlignment="Center"
                BorderBrush="LightGray"
                BorderThickness="1"
                FontSize="16"
                Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
            </Grid>
          </Grid>
        </Grid>
        <Separator
          Grid.Row="1"
          Grid.Column="0"
          Grid.ColumnSpan="2"
          Margin="0,15,0,0" />
      </Grid>

      <!--  Third Row  -->
      <Grid Grid.Row="2">
        <Grid.RowDefinitions>
          <RowDefinition Height="auto" />
          <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label
          Grid.Row="0"
          Content="Items"
          FontSize="24" />
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Positions}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border
                Height="55"
                Margin="0,0,0,0"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="10">
                <Grid Margin="5,0">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                  </Grid.ColumnDefinitions>
                  <CheckBox />
                  <TextBlock Grid.Column="1" Text="{Binding Id}" />
                  <TextBox Grid.Column="2" Text="{Binding Quantity}" />
                  <ComboBox
                    Grid.Column="3"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding UnitsOfMeasure}" />
                  <ComboBox
                    Grid.Column="4"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Items}" />
                  <TextBox Grid.Column="5" Text="{Binding Price}" />
                  <TextBox Grid.Column="6" Text="{Binding TotalPrice}" />
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </Grid>
    </Grid>
  </Grid>
</UserControl>
