<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DataTemplate x:Key="OpenTemplate">
    <Border
      Background="#EBF9EB"
      BorderBrush="Green"
      BorderThickness=".5"
      CornerRadius="5">
      <Label Content="{Binding State}" Foreground="Green" />
    </Border>
  </DataTemplate>

  <DataTemplate x:Key="ClosedTemplate">
    <Border
      Background="#FDEBEB"
      BorderBrush="Red"
      BorderThickness=".5"
      CornerRadius="5">
      <Label Content="{Binding State}" Foreground="Red" />
    </Border>
  </DataTemplate>
</ResourceDictionary>