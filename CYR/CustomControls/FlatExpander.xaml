<UserControl
  x:Class="CYR.CustomControls.FlatExpander"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CYR.CustomControls"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!--  Header Section  -->
    <Button
      x:Name="SPCard"
      Grid.Row="0"
      HorizontalContentAlignment="Stretch"
      Background="Transparent"
      BorderBrush="Transparent"
      Click="SPCard_Click"
      FontSize="18"
      Foreground="#FEE3BB">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <materialDesign:PackIcon
          Name="Icon"
          Grid.Column="0"
          Width="25"
          Height="25"
          Margin="0,0,10,0"
          VerticalAlignment="Center"
          Foreground="{Binding IconForeground, RelativeSource={RelativeSource AncestorType=UserControl}}"
          Kind="{Binding HeaderIcon, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <TextBlock
          Grid.Column="1"
          VerticalAlignment="Center"
          Text="{Binding HeaderText, RelativeSource={RelativeSource AncestorType=UserControl}}" />

        <CheckBox
          x:Name="cbDropDown"
          Grid.Column="1"
          HorizontalAlignment="Right"
          VerticalAlignment="Center"
          Background="Transparent"
          Foreground="White"
          IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=UserControl}}"
          Style="{StaticResource MaterialDesignVerticalHeaderStyle}" />
      </Grid>
    </Button>

    <Border
      x:Name="ContentBorder"
      Grid.Row="1"
      Padding="10"
      Visibility="Collapsed">
      <ContentPresenter x:Name="ExpanderContent" />
    </Border>
  </Grid>
</UserControl>
