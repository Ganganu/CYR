          <cc:IconButton
            Grid.Row="0"
            ButtonText="{Binding User.Username}"
            GroupName="NavigationButtons"
            IconKind="User" />
          <cc:IconButton
            Grid.Row="1"
            ButtonText="Einstellungen"
            Command="{Binding NavigateToSettingsViewCommand}"
            GroupName="NavigationButtons"
            IconKind="Settings" />
