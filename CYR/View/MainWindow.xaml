<Window
  x:Class="CYR.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:cc="clr-namespace:CYR.CustomControls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CYR"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:CYR.ViewModel"
  Title="MainWindow"
  Width="1500"
  Height="850"
  d:DataContext="{d:DesignInstance Type=vm:MainViewModel,
                                   IsDesignTimeCreatable=False}"
  mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="4*" />
    </Grid.ColumnDefinitions>
    <ContentPresenter Grid.Column="1" Content="{Binding Navigation.CurrentView}" />
    <Grid Grid.Column="0" Background="#1D212D">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="4*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid Grid.Row="0" Margin="15">
        <Image
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Source="/Ressources/LogoDoubleG1.png" />
      </Grid>
      <Grid Grid.Row="1">
        <StackPanel Orientation="Vertical">
          <cc:FlatExpander
            HeaderIcon="ReceiptText"
            HeaderText="Rechnungen"
            IconForeground="#FEE3BB">
            <cc:FlatExpander.Content>
              <StackPanel>
                <cc:IconButton
                  ButtonText="Neue Rechnung"
                  Command="{Binding NavigateToCreateNewInvoiceCommand}"
                  GroupName="NavigationButtons"
                  IconKind="ReceiptTextAdd" />
                <cc:IconButton
                  ButtonText="Rechnungen durchsuchen"
                  Command="{Binding NavigateToGetInvoicesCommand}"
                  GroupName="NavigationButtons"
                  IconKind="InvoiceList" />
              </StackPanel>
            </cc:FlatExpander.Content>
          </cc:FlatExpander>
          <Separator />
          <cc:IconButton
            ButtonText="Kostenvoranschläge"
            GroupName="NavigationButtons"
            IconKind="Euro" />
          <Separator />
          <cc:IconButton
            ButtonText="Angebote"
            GroupName="NavigationButtons"
            IconKind="InvoiceTextCheckOutline" />
          <Separator />
          <cc:IconButton
            ButtonText="Kunden"
            Command="{Binding NavigateToClientViewCommand}"
            GroupName="NavigationButtons"
            IconKind="Person" />
          <Separator />
          <cc:FlatExpander
            HeaderIcon="ReceiptText"
            HeaderText="Artikel/Dienstleistungen"
            IconForeground="#FEE3BB">
            <cc:FlatExpander.Content>
              <StackPanel>
                <cc:IconButton
                  ButtonText="Durchsuchen"
                  Command="{Binding NavigateToArticleViewCommand}"
                  GroupName="NavigationButtons"
                  IconKind="Search" />
                <cc:IconButton
                  ButtonText="Hinzufügen"
                  Command="{Binding NavigateToCreateNewArticleCommand}"
                  GroupName="NavigationButtons"
                  IconKind="Add" />
              </StackPanel>
            </cc:FlatExpander.Content>
          </cc:FlatExpander>
        </StackPanel>
      </Grid>
      <Grid Grid.Row="2">
        <StackPanel Orientation="Vertical">
          <cc:IconButton
            ButtonText="Einstellungen"
            Command="{Binding NavigateToSettingsViewCommand}"
            GroupName="NavigationButtons"
            IconKind="Settings" />
          <cc:LinkButton ButtonText="Hilfe" IconKind="QuestionMark" />
        </StackPanel>
      </Grid>
    </Grid>
  </Grid>
</Window>
