<UserControl
  x:Class="CYR.View.SettingsView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CYR.View"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:CYR.ViewModel"
  d:Background="White"
  d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <Expander Grid.Row="0" Header="UI Settings">
      <StackPanel>
        <materialDesign:ColorPicker Color="{Binding ThemeColor, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBox Grid.Column="1" Text="{Binding ThemeColor, StringFormat={}{0}}" />
      </StackPanel>
    </Expander>
    <Expander
      Grid.Row="1"
      FontSize="18"
      Header="User Settings">
      <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
          </Grid.RowDefinitions>
          <TextBox
            Grid.Row="0"
            materialDesign:HintAssist.Hint="Name"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding Name}" />
          <TextBox
            Grid.Row="1"
            materialDesign:HintAssist.Hint="Street"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding Street}" />
          <TextBox
            Grid.Row="2"
            materialDesign:HintAssist.Hint="City"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding City}" />
          <TextBox
            Grid.Row="3"
            materialDesign:HintAssist.Hint="PLZ"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding Plz}" />
          <TextBox
            Grid.Row="4"
            materialDesign:HintAssist.Hint="House number"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding HouseNumber}" />
          <TextBox
            Grid.Row="5"
            materialDesign:HintAssist.Hint="Telefon number"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding Telefonnumber}" />
          <TextBox
            Grid.Row="6"
            materialDesign:HintAssist.Hint="Email address"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding EmailAddress}" />
          <TextBox
            Grid.Row="7"
            materialDesign:HintAssist.Hint="Bank name"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding BankName}" />
          <TextBox
            Grid.Row="8"
            materialDesign:HintAssist.Hint="IBAN"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding Iban}" />
          <TextBox
            Grid.Row="9"
            materialDesign:HintAssist.Hint="BIC"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding Bic}" />
          <TextBox
            Grid.Row="10"
            materialDesign:HintAssist.Hint="USTIDNr"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding Ustidnr}" />
          <TextBox
            Grid.Row="11"
            materialDesign:HintAssist.Hint="STNR"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding Stnr}" />
          <Button
            Grid.Row="12"
            Height="100"
            HorizontalAlignment="Left"
            Command="{Binding SelectImageCommand}"
            Style="{StaticResource MaterialDesignFlatButton}">
            <Button.Content>
              <Image Source="{Binding Logo}" />
            </Button.Content>
          </Button>
        </Grid>
      </ScrollViewer>
    </Expander>
    <Button
      Grid.Row="2"
      Command="{Binding SaveSettingsCommand}"
      Content="Save" />
  </Grid>
</UserControl>
