<UserControl
  x:Class="CYR.View.ArticleView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CYR.View"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:CYR.ViewModel"
  d:DataContext="{d:DesignInstance Type=vm:ArticleViewModel,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <Grid.Background>
      <LinearGradientBrush Opacity=".2" StartPoint="0 2" EndPoint="1 1">
        <GradientStop Offset="0.1" Color="#a7d5f2" />
        <GradientStop Offset="1.1" Color="#efc6ff" />
      </LinearGradientBrush>
    </Grid.Background>
    <Border
      Margin="30,30,30,0"
      BorderThickness="2"
      CornerRadius="5">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="auto" />
          <RowDefinition Height="auto" />
          <RowDefinition Height="auto" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>
          <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Artikel und Dienstleistungen"
            FontSize="28" />
          <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button Style="{StaticResource MaterialDesignFlatButton}">
              <Button.Content>
                <materialDesign:PackIcon Kind="Printer" />
              </Button.Content>
            </Button>
            <Button Style="{StaticResource MaterialDesignFlatButton}">
              <Button.Content>
                <materialDesign:PackIcon Kind="Upload" />
              </Button.Content>
            </Button>
          </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
          <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Label Content="Rows selected" />
            <Button Style="{StaticResource MaterialDesignFlatButton}">
              <Button.Content>
                <materialDesign:PackIcon Kind="Delete" />
              </Button.Content>
            </Button>
            <Button Style="{StaticResource MaterialDesignFlatButton}">
              <Button.Content>
                <materialDesign:PackIcon Kind="Edit" />
              </Button.Content>
            </Button>

          </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
          <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
              Grid.Column="0"
              Content="Name"
              FontSize="18" />
            <Label
              Grid.Column="1"
              Margin="-10,0,0,0"
              Content="Beschreibung"
              FontSize="18" />
            <Label
              Grid.Column="2"
              Margin="-10,0,0,0"
              Content="Preis"
              FontSize="18" />
          </Grid>
          <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBox
              Grid.Column="0"
              Width="250"
              MaxWidth="350"
              HorizontalAlignment="Left"
              materialDesign:HintAssist.Foreground="Black"
              materialDesign:HintAssist.Hint="Artikelname"
              materialDesign:HintAssist.IsFloating="False"
              materialDesign:TextFieldAssist.HasLeadingIcon="True"
              materialDesign:TextFieldAssist.LeadingIcon="Search"
              Background="White"
              BorderBrush="Transparent"
              FontSize="14"
              Foreground="Gray"
              Style="{StaticResource MaterialDesignOutlinedTextBox}" />
            <TextBox
              Grid.Column="1"
              Width="250"
              MaxWidth="350"
              Margin="-10,0,0,0"
              HorizontalAlignment="Left"
              materialDesign:HintAssist.Foreground="Black"
              materialDesign:HintAssist.Hint="Artikel Beschreibung"
              materialDesign:HintAssist.IsFloating="False"
              materialDesign:TextFieldAssist.HasLeadingIcon="True"
              materialDesign:TextFieldAssist.LeadingIcon="Search"
              Background="White"
              BorderBrush="Transparent"
              FontSize="14"
              Foreground="Gray"
              Style="{StaticResource MaterialDesignOutlinedTextBox}" />
            <TextBox
              Grid.Column="2"
              Width="250"
              MaxWidth="350"
              Margin="-10,0,0,0"
              HorizontalAlignment="Left"
              materialDesign:HintAssist.Foreground="Black"
              materialDesign:HintAssist.Hint="Artikel Preis"
              materialDesign:HintAssist.IsFloating="False"
              materialDesign:TextFieldAssist.HasLeadingIcon="True"
              materialDesign:TextFieldAssist.LeadingIcon="Search"
              Background="White"
              BorderBrush="Transparent"
              FontSize="14"
              Foreground="Gray"
              Style="{StaticResource MaterialDesignOutlinedTextBox}" />
          </Grid>
        </Grid>
