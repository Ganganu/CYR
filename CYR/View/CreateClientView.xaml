<UserControl
  x:Class="CYR.View.CreateClientView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CYR.View"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:CYR.ViewModel"
  d:DataContext="{d:DesignInstance Type=vm:CreateClientViewModel,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <Grid.Background>
      <LinearGradientBrush Opacity=".2" StartPoint="0 2" EndPoint="1 1">
        <GradientStop Offset="0.1" Color="#a7d5f2" />
        <GradientStop Offset="1.1" Color="#efc6ff" />
      </LinearGradientBrush>
    </Grid.Background>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="4*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="7*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Button
      Grid.Column="0"
      Margin="0,10,0,10"
      HorizontalAlignment="Left"
      VerticalAlignment="Top"
      Command="{Binding NavigateBackCommand}"
      Style="{StaticResource MaterialDesignFlatButton}">
      <Button.Content>
        <materialDesign:PackIcon Kind="ArrowLeft" />
      </Button.Content>
    </Button>
    <Border
      Grid.Row="1"
      Grid.Column="1"
      Background="White"
      CornerRadius="10">
      <StackPanel>
        <Label
          HorizontalAlignment="Center"
          Content="Neuen Kunden hinzufügen"
          FontSize="25" />
        <Border
          Margin="5,5,5,0"
          BorderBrush="LightGray"
          BorderThickness="0,2,0,0" />
        <TextBox
          Margin="5,5,5,0"
          materialDesign:HintAssist.Foreground="Black"
          materialDesign:HintAssist.Hint="Kundennummer"
          FontSize="15"
          Style="{StaticResource MaterialDesignFloatingHintTextBox}"
          Text="{Binding ClientNumber, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
          Margin="5,5,5,0"
          materialDesign:HintAssist.Foreground="Black"
          materialDesign:HintAssist.Hint="kundenname"
          FontSize="15"
          Style="{StaticResource MaterialDesignFloatingHintTextBox}"
          Text="{Binding ClientName, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
          Margin="5,5,5,0"
          materialDesign:HintAssist.Foreground="Black"
          materialDesign:HintAssist.Hint="Telefonnummer"
          FontSize="15"
          Style="{StaticResource MaterialDesignFloatingHintTextBox}"
          Text="{Binding ClientTelefonnumber, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
          Margin="5,5,5,0"
          materialDesign:HintAssist.Foreground="Black"
          materialDesign:HintAssist.Hint="Email"
          FontSize="15"
          Style="{StaticResource MaterialDesignFloatingHintTextBox}"
          Text="{Binding ClientEmail, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
          Margin="5,5,5,0"
          materialDesign:HintAssist.Foreground="Black"
          materialDesign:HintAssist.Hint="Straße"
          FontSize="15"
          Style="{StaticResource MaterialDesignFloatingHintTextBox}"
          Text="{Binding ClientStreet, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
          Margin="5,5,5,0"
          materialDesign:HintAssist.Foreground="Black"
          materialDesign:HintAssist.Hint="PLZ"
          FontSize="15"
          Style="{StaticResource MaterialDesignFloatingHintTextBox}"
          Text="{Binding ClientPLZ, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
          Margin="5,5,5,0"
          materialDesign:HintAssist.Foreground="Black"
          materialDesign:HintAssist.Hint="Ort"
          FontSize="15"
          Style="{StaticResource MaterialDesignFloatingHintTextBox}"
          Text="{Binding ClientCity, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
          Margin="5,5,5,0"
          materialDesign:HintAssist.Foreground="Black"
          materialDesign:HintAssist.Hint="Erstellungsdatum"
          FontSize="15"
          Style="{StaticResource MaterialDesignFloatingHintTextBox}"
          Text="{Binding ClientCreationDate, UpdateSourceTrigger=PropertyChanged}" />
        <Label
          Margin="0,5,0,0"
          Content="{Binding ErrorMessage}"
          FontSize="15"
          Foreground="Red" />
        <Grid Margin="5,20,5,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>
          <Button
            Grid.Column="0"
            Margin="0,0,5,0"
            Command="{Binding DataContext.NavigateBackCommand, RelativeSource={RelativeSource AncestorType=Border}}"
            Content="Abbrechen" />
          <Button
            Grid.Column="1"
            Margin="5,0,0,0"
            Command="{Binding SaveClientCommand}"
            Content="Speichern" />
        </Grid>

      </StackPanel>
    </Border>

  </Grid>
</UserControl>
