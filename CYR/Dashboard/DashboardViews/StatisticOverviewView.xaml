<UserControl
  x:Class="CYR.Dashboard.DashboardViews.StatisticOverviewView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CYR.Dashboard.DashboardViews"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:CYR.Dashboard.DashboardViewModels"
  d:DataContext="{d:DesignInstance Type=vm:StatisticOverviewViewModel,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Grid Grid.Column="0">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
          Grid.Row="0"
          Margin="5"
          Padding="5"
          Background="#f5f5f5"
          CornerRadius="5">
          <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <materialDesign:PackIcon
              Width="50"
              Height="50"
              HorizontalAlignment="Center"
              Foreground="Orange"
              Kind="InvoiceMinus" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="16"
              FontWeight="SemiBold"
              Text="OFFENE RECHNUNGEN" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="25"
              FontWeight="Bold"
              Text="{Binding UnpaidInvoices, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
          </StackPanel>
        </Border>
        <Border
          Grid.Row="1"
          Margin="5"
          Padding="5"
          Background="#f5f5f5"
          CornerRadius="5">
          <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <materialDesign:PackIcon
              Width="50"
              Height="50"
              HorizontalAlignment="Center"
              Foreground="#3da581"
              Kind="Sale" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="18"
              FontWeight="SemiBold"
              Text="UMSATZ 2025" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="25"
              FontWeight="Bold"
              Text="{Binding SalesYear, StringFormat={}{0:F2} €}" />
          </StackPanel>
        </Border>
        <Border
          Grid.Row="2"
          Margin="5"
          Padding="5"
          Background="#f5f5f5"
          CornerRadius="5">
          <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <materialDesign:PackIcon
              Width="50"
              Height="50"
              HorizontalAlignment="Center"
              Foreground="#3072a7"
              Kind="UserCheck" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="18"
              FontWeight="SemiBold"
              Text="TOP KUNDEN" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="25"
              FontWeight="Bold"
              Text="{Binding ClientAndSales.Client}" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="25"
              FontWeight="Bold"
              Text="{Binding ClientAndSales.Amount, StringFormat={}{0:F2} €}" />
          </StackPanel>
        </Border>
      </Grid>
      <Grid Grid.Column="1">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
          Grid.Row="0"
          Margin="5"
          Padding="5"
          Background="#f5f5f5"
          CornerRadius="5">
          <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <materialDesign:PackIcon
              Width="50"
              Height="50"
              HorizontalAlignment="Center"
              Foreground="#3da581"
              Kind="InvoiceCheck" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="16"
              FontWeight="SemiBold"
              Text="BEZAHLTE RECHNUNGEN" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="25"
              FontWeight="Bold"
              Text="{Binding PaidInvoices, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
          </StackPanel>
        </Border>
        <Border
          Grid.Row="1"
          Margin="5"
          Padding="5"
          Background="#f5f5f5"
          CornerRadius="5">
          <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <materialDesign:PackIcon
              Width="50"
              Height="50"
              HorizontalAlignment="Center"
              Foreground="#3da581"
              Kind="SaleCircle" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="18"
              FontWeight="SemiBold"
              Text="UMSATZ AKTUELLER MONAT" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="25"
              FontWeight="Bold"
              Text="{Binding SalesActualMonth, StringFormat={}{0:F2} €}" />
          </StackPanel>
        </Border>
        <Border
          Grid.Row="2"
          Margin="5"
          Padding="5"
          Background="#f5f5f5"
          CornerRadius="5">
          <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <materialDesign:PackIcon
              Width="50"
              Height="50"
              HorizontalAlignment="Center"
              Foreground="#3072a7"
              Kind="InvoicePlus" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="18"
              FontWeight="SemiBold"
              Text="NEUE RECHNUNGEN" />
            <TextBlock
              HorizontalAlignment="Center"
              FontSize="25"
              FontWeight="Bold"
              Text="{Binding InvoicesActualMonth}" />
          </StackPanel>
        </Border>
      </Grid>
    </Grid>
  </ScrollViewer>
</UserControl>
