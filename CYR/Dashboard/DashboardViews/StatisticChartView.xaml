<UserControl
  x:Class="CYR.Dashboard.DashboardViews.StatisticChartView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CYR.Dashboard.DashboardViews"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:oxy="http://oxyplot.org/wpf"
  xmlns:vm="clr-namespace:CYR.Dashboard.DashboardViewModels"
  d:DataContext="{d:DesignInstance Type=vm:StatisticChartViewModel,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Border
    Padding="10"
    Background="White"
    CornerRadius="8">
    <Grid Background="#f8f8f8">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <ComboBox
        Grid.Row="0"
        HorizontalAlignment="Right"
        Background="White"
        FontSize="13"
        BorderBrush="Orange" BorderThickness="0 0 0 2"
        Margin="0 10 10 0"
        ItemsSource="{Binding Years}"
        SelectedIndex="0"
        SelectedItem="{Binding SelectedYear, Mode=TwoWay}"
        Style="{StaticResource MaterialDesignOutlinedComboBox}" />
      <oxy:PlotView
        Grid.Row="1"
        Background="Transparent"
        Model="{Binding SalesPerMonth}" />
    </Grid>
  </Border>
</UserControl>
