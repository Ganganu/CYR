<UserControl
  x:Class="CYR.Dashboard.DashboardViews.StatisticChartView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CYR.Dashboard.DashboardViews"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:oxy="http://oxyplot.org/wpf"
  xmlns:vm="clr-namespace:CYR.Dashboard.DashboardViewModels"
  d:DataContext="{d:DesignInstance Type=vm:StatisticChartViewModel,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Border
    Padding="10"
    Background="White"
    CornerRadius="8">
    <Grid Background="White">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <ComboBox
        Grid.Row="0"
        Margin="0,3,3,0"
        HorizontalAlignment="Right"
        Background="White"
        BorderBrush="Orange"
        BorderThickness="1.3"
        FontSize="13"
        ItemsSource="{Binding Years}"
        SelectedIndex="0"
        SelectedItem="{Binding SelectedYear, Mode=TwoWay}"
        Style="{StaticResource MaterialDesignOutlinedComboBox}" />
      <oxy:PlotView
        Grid.Row="1"
        Background="Transparent"
        Controller="{Binding PlotController}"
        Model="{Binding SalesPerMonth}">
        <oxy:PlotView.DefaultTrackerTemplate>
          <ControlTemplate>
            <Canvas>
              <Border Margin="10"
                Canvas.Left="{Binding Position.X}"
                Canvas.Top="{Binding Position.Y}"
                Padding="5"
                Background="Black"
                CornerRadius="5">
                <TextBlock
                  FontSize="16"
                  FontWeight="Bold"
                  Foreground="White"
                  Text="{Binding}" />
              </Border>
            </Canvas>
          </ControlTemplate>
        </oxy:PlotView.DefaultTrackerTemplate>
      </oxy:PlotView>
    </Grid>
  </Border>
</UserControl>
