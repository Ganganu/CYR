<UserControl
  x:Class="CYR.Dashboard.DashboardViews.DashboardView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CYR.Dashboard.DashboardViews"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:CYR.Dashboard.DashboardViewModels"
  d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  FontFamily="Segoe UI"
  mc:Ignorable="d">
  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
  </UserControl.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid
      Grid.Row="0"
      Grid.Column="0"
      Grid.ColumnSpan="2">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <TextBlock
        Grid.Row="0"
        Margin="3,5,0,10"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        FontSize="35"
        FontWeight="Bold"
        Text="Dashboard" />
      <TextBlock
        Grid.Row="1"
        Margin="3,0,0,0"
        VerticalAlignment="Bottom"
        FontSize="15"
        Foreground="#64748b"
        Text="Überblick über Ihre Rechnungen" />
      <StackPanel
        Grid.Row="0"
        Grid.RowSpan="2"
        HorizontalAlignment="Right"
        Orientation="Horizontal">
        <Grid>
          <materialDesign:PackIcon
            Width="15"
            Height="15"
            Margin="0,0,15,20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Panel.ZIndex="2"
            Foreground="Orange"
            Kind="Warning"
            ToolTip="Vervolständingen Sie bitte Ihre Firmen- und Benutzerdaten bevor Sie eine Rechnung erstellen."
            Visibility="{Binding IsWarningVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
          <Button
            Width="50"
            Height="50"
            Margin="0,0,15,0"
            Style="{StaticResource MaterialDesignFlatButton}">
            <Button.Template>
              <ControlTemplate TargetType="Button">
                <Grid>
                  <Ellipse Stroke="LightGray" StrokeThickness="1">
                    <Ellipse.Fill>
                      <ImageBrush ImageSource="{Binding DataContext.UserLogo, RelativeSource={RelativeSource AncestorType=Button}}" Stretch="Uniform" />
                    </Ellipse.Fill>
                  </Ellipse>
                  <Popup
                    Name="PopupMenu"
                    Placement="Bottom"
                    PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                    StaysOpen="False">
                    <Border
                      Background="White"
                      BorderBrush="LightGray"
                      BorderThickness="1">
                      <StackPanel Margin="2">
                        <Button
                          Command="{Binding DataContext.NavigateToUserViewCommand, RelativeSource={RelativeSource AncestorType=Button}}"
                          Content="Konto"
                          Style="{StaticResource MaterialDesignFlatButton}" />
                        <Button
                          Command="{Binding DataContext.LogoutCommand, RelativeSource={RelativeSource AncestorType=Button}}"
                          Content="Abmelden"
                          Style="{StaticResource MaterialDesignFlatButton}" />
                      </StackPanel>
                    </Border>
                  </Popup>
                </Grid>
                <ControlTemplate.Triggers>
                  <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                      <Storyboard>
                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="PopupMenu" Storyboard.TargetProperty="IsOpen">
                          <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True" />
                        </BooleanAnimationUsingKeyFrames>
                      </Storyboard>
                    </BeginStoryboard>
                  </EventTrigger>
                </ControlTemplate.Triggers>
              </ControlTemplate>
            </Button.Template>
          </Button>
        </Grid>
        <TextBlock
          Margin="0,0,5,0"
          VerticalAlignment="Center"
          FontSize="15"
          Text="{Binding User.Username}" />

      </StackPanel>
    </Grid>

    <ContentControl
      Grid.Row="1"
      Grid.Column="0"
      Grid.ColumnSpan="2"
      Content="{Binding StatisticOverviewVM}" />
    <Border
      Grid.Row="2"
      Grid.Column="0"
      Grid.ColumnSpan="2"
      Margin="5"
      BorderBrush="Orange"
      BorderThickness="1"
      CornerRadius="5">
      <ContentControl Content="{Binding StatisticChartVM}" />
    </Border>
  </Grid>
</UserControl>
