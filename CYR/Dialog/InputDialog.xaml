<UserControl
    x:Class="CYR.Dialog.InputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CYR.Dialog"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:InputViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Width="600"
        Height="300"
        Background="white"
        BorderBrush="Orange"
        BorderThickness="2"
        CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <materialDesign:PackIcon
                    Width="50"
                    Height="50"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="Orange"
                    Kind="{Binding Icon}" />
                <Border
                    Margin="10"
                    BorderBrush="LightGray"
                    BorderThickness="0,3,0,0" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="25"
                    Text="{Binding Title}" />
            </StackPanel>
            <StackPanel Grid.Row="1">
                <TextBox
                    x:Name="InvoiceNumber"
                    Margin="10,20,10,0"
                    materialDesign:HintAssist.Hint="{Binding InputTextHint}"
                    materialDesign:HintAssist.IsFloating="False"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding InputText}"
                    TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,10,10"
                    HorizontalAlignment="Right"
                    Click="Button_Click"
                    Content="{Binding OkButtonText}"
                    Visibility="{Binding IsOkVisible}" />
                <Button
                    Margin="0,0,10,10"
                    HorizontalAlignment="Right"
                    Click="Button_Click_1"
                    Content="{Binding CancelButtonText}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
