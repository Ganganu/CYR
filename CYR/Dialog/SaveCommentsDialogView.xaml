<UserControl
  x:Class="CYR.Dialog.SaveCommentsDialogView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CYR.Dialog"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Width="550"
  Height="350"
  d:DataContext="{d:DesignInstance Type=local:SaveCommentsDialogViewModel,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Border
    Background="White"
    BorderBrush="Orange"
    BorderThickness="2"
    CornerRadius="5">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="auto" />
      </Grid.RowDefinitions>
      <StackPanel Grid.Row="0" Orientation="Vertical">
        <materialDesign:PackIcon
          Width="50"
          Height="50"
          Margin="0,10,0,0"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Foreground="Orange"
          Kind="{Binding Icon}" />
        <TextBlock
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          FontSize="25"
          Text="{Binding Title}" />
        <Border
          Margin="10,0,10,0"
          BorderBrush="LightGray"
          BorderThickness="2" />
      </StackPanel>
      <StackPanel Grid.Row="1" Margin="10,10,10,0">
        <TextBlock
          Margin="0,10,0,0"
          FontSize="16"
          Text="Name Vorlage" />
        <TextBox
          materialDesign:HintAssist.Hint="z.B. Rechnung normal"
          materialDesign:HintAssist.IsFloating="False"
          BorderBrush="LightGray"
          BorderThickness="1"
          FontSize="14"
          Style="{StaticResource MaterialDesignOutlinedTextBox}"
          Text="{Binding FileName}" />
        <TextBlock
          Margin="0,10,0,0"
          FontSize="16"
          Text="Vorlagetyp" />
        <ComboBox
          Grid.Row="1"
          materialDesign:HintAssist.Hint="Vorlagetyp auswählen"
          materialDesign:HintAssist.IsFloating="False"
          BorderBrush="LightGray"
          BorderThickness="1"
          FontSize="14"
          ItemsSource="{Binding CommentsType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
          SelectedIndex="0"
          SelectedItem="{Binding SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
          Style="{StaticResource MaterialDesignOutlinedComboBox}" />
      </StackPanel>
      <StackPanel
        Grid.Row="2"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Orientation="Horizontal">
        <Button
          Name="btnCancel"
          Margin="0,0,5,0"
          Click="btnCancel_Click"
          Content="Abbrechen" />
        <Button
          Name="btnAccept"
          Margin="0,0,5,0"
          Click="btnAccept_Click"
          Command="{Binding SaveTemplateCommand}"
          Content="Speichern" />
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
